// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Profile {
  id          String   @id @default(cuid())
  name        String
  title       String
  description String
  photo       String?
  email       String
  phone       String?
  location    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String
  category    String // "WEBSITE", "PRODUCT", "MOBILE"
  thumbnail   String
  images      String // JSON array
  year        Int
  client      String
  duration    String?
  industry    String?
  scope       String? // JSON array
  challenge   String?
  approach    String?
  testimonial String?
  content     String? // Rich text content
  isPublished Boolean  @default(false)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Testimonial {
  id            String   @id @default(cuid())
  quote         String
  clientName    String
  clientTitle   String
  clientCompany String
  clientPhoto   String?
  projectImage  String?
  projectLink   String?
  isActive      Boolean  @default(true)
  order         Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Service {
  id          String   @id @default(cuid())
  name        String
  description String
  features    String? // JSON array
  process     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model MediaFile {
  id           String   @id @default(cuid())
  name         String   @default("")
  filename     String
  originalName String
  mimeType     String
  size         Int
  url          String
  thumbnailUrl String?
  alt          String?
  description  String?
  type         String   @default("other")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model About {
  id          String   @id @default(cuid())
  biography   String
  stats       String // JSON
  awards      String // JSON array
  socialLinks String // JSON
  photos      String // JSON array
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model TemplateProject {
  id                String    @id @default(cuid())
  title             String
  heroImage         String    @default("")
  challenge         String    @default("")
  approach          String    @default("")
  client            String
  year              String
  duration          String    @default("")
  type              String    @default("")
  industry          String    @default("")
  scope             String    @default("[]") // JSON array
  image1            String    @default("")
  textSection1      String    @default("")
  image2            String    @default("")
  image3            String    @default("")
  image4            String    @default("")
  video1            String    @default("")
  video1Poster      String    @default("")
  video2            String    @default("")
  video2Poster      String    @default("")
  testimonialQuote  String    @default("")
  testimonialAuthor String    @default("")
  testimonialRole   String    @default("")
  testimonialImage  String    @default("")
  finalImage        String    @default("")
  textSection2      String    @default("")
  finalImage1       String    @default("")
  finalImage2       String    @default("")
  status            String    @default("draft") // "draft", "published", "archived"
  publishedAt       DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}

model SiteBackup {
  id          String   @id @default(cuid())
  description String
  data        String // JSON
  createdAt   DateTime @default(now())
}

model HomepageContent {
  id           String   @id @default(cuid())
  section      String // "hero", "brands", "services", "offer", "testimonials", "footer"
  fieldName    String
  fieldValue   String?
  fieldType    String   @default("text") // "text", "textarea", "url", "image", "json"
  displayOrder Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([section, fieldName])
  @@index([section])
  @@index([section, fieldName])
}

model HomepageVersion {
  id              String   @id @default(cuid())
  versionName     String?
  contentSnapshot String // JSON snapshot of all homepage content
  isActive        Boolean  @default(false)
  createdAt       DateTime @default(now())

  @@index([createdAt])
  @@index([isActive])
}
