{
  "name": "@portfolio/universal-editor",
  "version": "1.0.0",
  "description": "Ã‰diteur WYSIWYG universel pour les portfolios",
  "author": "Portfolio CMS Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/portfolio-cms/universal-editor"
  },
  "build": {
    "outDir": "dist",
    "entry": "src/components/UniversalEditor/index.ts",
    "formats": ["esm", "cjs", "umd"],
    "minify": true,
    "sourcemap": true,
    "target": ["es2018", "chrome80", "firefox80", "safari13", "edge80"]
  },
  "dependencies": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "@tiptap/core": "^2.0.0",
    "@tiptap/pm": "^2.0.0",
    "@tiptap/react": "^2.0.0",
    "@tiptap/starter-kit": "^2.0.0",
    "@tiptap/extension-placeholder": "^2.0.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "browsers": {
    "chrome": ">=80",
    "firefox": ">=80",
    "safari": ">=13",
    "edge": ">=80"
  },
  "deployment": {
    "environments": {
      "development": {
        "apiUrl": "http://localhost:3000/api",
        "features": {
          "debugMode": true,
          "performanceMonitoring": true
        }
      },
      "staging": {
        "apiUrl": "https://staging-api.portfolio-cms.com",
        "features": {
          "debugMode": true,
          "performanceMonitoring": true
        }
      },
      "production": {
        "apiUrl": "https://api.portfolio-cms.com",
        "features": {
          "debugMode": false,
          "performanceMonitoring": true
        }
      }
    },
    "cdn": {
      "enabled": true,
      "provider": "cloudfront",
      "paths": {
        "js": "/assets/js",
        "css": "/assets/css",
        "images": "/assets/images"
      }
    },
    "optimization": {
      "splitChunks": true,
      "treeShaking": true,
      "compression": true,
      "imageOptimization": true
    }
  }
}